Codeforces_296084D-17.cpp

#include<bits/stdc++.h> 
using namespace std;

int main() {
     ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int n,m;
    cin>>n;
    int a[n];
    for(int i=0;i<n;i++)
    cin>>a[i];
  int b[n];
   b[0]=a[0];
   for(int i=1;i<n;i++)
   b[i]=b[i-1]+a[i];
    cin>>m;
    while(m--)
    {
        int x;
        cin>>x;
       int l=-1;
       int r=n;
       while(l<=r)
          {
              int  mid=(l+r)/2;
              if(b[mid]<x)
              l=mid;
              else if(b[mid]>=x)
              r=mid;
              if(r-l==1)
              {
                cout<<(r+1)<<endl;
                  break;
              }   
          }
    }
}





